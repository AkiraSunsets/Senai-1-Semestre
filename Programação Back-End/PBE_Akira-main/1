class Veiculo:
    def __init__(self, tipo):
        self.tipo = tipo

    def especificar(self):
        pass

class Carro:
    def __init__(self, nome, cor, situacao):
        self.nome = nome
        self.cor = cor
        self.situacao = situacao

    def estado(self):
        print(f"O {self.nome} {self.cor} está {self.situacao} e pode andar!")

class Caminhao:
    def __init__(self, nome, cor, situacao):
        self.nome = nome
        self.cor = cor
        self.situacao = situacao

    def estado(self):
        print(f"O {self.nome} {self.cor} está com {self.situacao} e não pode andar")

class Moto:
    def __init__(self, nome, cor, situacao):
        self.nome = nome
        self.cor = cor
        self.situacao = situacao

    def estado(self):
        print(f"A {self.nome} {self.cor} está {self.situacao} e não pode andar")

car = Carro("Carro", "Preto", "regularizado")
car.estado()

cam = Caminhao("Caminhão", "Azul", "documento atrasado")
cam.estado()

moto = Moto("Moto", "Vermelha", "irregular")
moto.estado()
